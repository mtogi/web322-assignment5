<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Set</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <%- include('partials/navbar', {page: '/lego/addSet' }) %>

  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Add Set</h1>
        </div>
      </div>
    </div>

    <form action="/lego/addSet" method="POST" class="my-4">
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div>
          <label for="year">Year:</label>
          <input type="number" id="year" name="year" required>
        </div>
        <div>
          <label for="num_parts">Number of Parts:</label>
          <input type="number" id="num_parts" name="num_parts" required>
        </div>
        <div>
          <label for="img_url">Image URL:</label>
          <input type="url" id="img_url" name="img_url" required>
        </div>
        <div>
          <label for="theme_id">Theme:</label>
          <select id="theme_id" name="theme_id" required>
            <% themes.forEach(theme => { %>
              <option value="<%= theme.id %>">
                <%= theme.name %>
              </option>
            <% }) %>
          </select>
        </div>
        <div>
          <label for="set_num">Set Number:</label>
          <input type="text" id="set_num" name="set_num" required>
        </div>
      </div>

      <button type="submit" class="btn btn-primary mt-4">Submit</button>
    </form>
  </div>

</body>

</html>
